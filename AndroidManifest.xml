<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.masum.securenote"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="10" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.masum.securenote.SecureNote"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.masum.securenote.RegisterUser"
            android:label="@string/title_activity_register_user" >
        </activity>
        <activity
            android:name="com.masum.securenote.NotesList"
            android:label="@string/title_activity_notes_list" >
        </activity>
        <activity
            android:name="com.masum.securenote.NoteEdit"
            android:label="@string/title_activity_note_edit" >
        </activity>
    </application>

</manifest>